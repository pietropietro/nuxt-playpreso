<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
		<item name="android:statusBarColor">#00000f</item>
		<item name="android:windowLightStatusBar">false</item> <!-- Use true for dark icons (light background) -->
	</style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
		<item name="android:statusBarColor">#00000f</item> <!-- Status bar color at the top -->
		<item name="android:navigationBarColor">#00000f</item> <!-- Navigation bar color at the bottom -->
		<item name="android:windowLightNavigationBar">false</item> <!-- Use false for light text/icons on dark backgrounds -->
		<item name="android:windowLightStatusBar">false</item> <!-- Use false for light text/icons on dark backgrounds -->
    </style>


</resources>
